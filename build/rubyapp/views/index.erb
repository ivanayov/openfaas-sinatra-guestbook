<div class="container">

<header class="jumbotron my-4">
    <h3 class="display-3">Sign our Guestbook</h3> </br>

    <form accept-charset="UTF-8" action="/function/rubyapp/sign" method="post">
      First Name: <input id="first-name" name="first-name" type="text" /> </br> </br>
      Last  Name: <input id="last-name" name="last-name" type="text" /> </br> </br>

      <input name="submit" class="btn btn-primary btn-lg" type="submit" value="Sign" />
    </form>

</header>

  <div class="jumbotron my-4">

      <% if visitors.length > 0 %>
          <h4 class="card-title">Our visitors include:</h4>
          
          <ul>
            <% visitors.each do |visitor| %>
              <li><%= visitor %></li>
            <% end %>
          </ul>
      <% end %>

  </div>

</div>
